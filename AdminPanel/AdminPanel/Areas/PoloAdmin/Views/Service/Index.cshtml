@model  IEnumerable<Service>
@{
    ViewData["Title"] = "Service";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <a asp-action="Create" class="btn btn-primary">Create</a>
                    <div class="card-body">
                        <h5 class="card-title m-b-0">Services</h5>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Title</th>
                                <th scope="col">Description</th>
                                <th scope="col">Icon</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                int count = 1;
                            }
                            @foreach (var service in Model)
                            {
                            <tr>
                                <th scope="row">@count</th>
                                <td>@service.Title</td>
                                <td>@(service.Description.Substring(0,30)+"...")</td>
                                <td>@service.IconField</td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@service.Id" class="btn btn-success"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Update" asp-route-id="@service.Id" class="btn btn-warning"><i class="far fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



